<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        logicalFilePath="db/changelog/0008-alter-user-system-add-unique-username.xml"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="0008-alter-user-system-add-unique-username" author="system">
        <comment>Adiciona constraint UNIQUE para a coluna username na tabela easyfood.user_system</comment>

        <addUniqueConstraint schemaName="easyfood"
                              tableName="user_system"
                              columnNames="username"
                              constraintName="uk_usuario_username"/>
    </changeSet>

</databaseChangeLog>
