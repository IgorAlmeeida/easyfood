<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        logicalFilePath="db/changelog/0004-create-audit-tables.xml"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="0004-create-audit-tables" author="system">
        <comment>Cria tabelas de auditoria compat√≠veis com Hibernate Envers</comment>

        <createTable tableName="address_audit" schemaName="audit_easyfood">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="rev" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="revtype" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="dh_create_at" type="TIMESTAMP"/>
            <column name="dh_update_at" type="TIMESTAMP"/>
        </createTable>
        <addPrimaryKey schemaName="audit_easyfood" tableName="address_audit" columnNames="id, rev" constraintName="pk_address_audit"/>
        <addForeignKeyConstraint baseTableSchemaName="audit_easyfood" baseTableName="address_audit" baseColumnNames="rev"
                                 referencedTableSchemaName="audit_easyfood" referencedTableName="revision_entity" referencedColumnNames="id"
                                 constraintName="fk_address_audit_rev"/>

        <createTable tableName="user_system_audit" schemaName="audit_easyfood">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="rev" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="revtype" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="username" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="active" type="BOOLEAN"/>
            <column name="address_id" type="BIGINT"/>
            <column name="dh_create_at" type="TIMESTAMP"/>
            <column name="dh_update_at" type="TIMESTAMP"/>
        </createTable>
        <addPrimaryKey schemaName="audit_easyfood" tableName="user_system_audit" columnNames="id, rev" constraintName="pk_user_system_audit"/>
        <addForeignKeyConstraint baseTableSchemaName="audit_easyfood" baseTableName="user_system_audit" baseColumnNames="rev"
                                 referencedTableSchemaName="audit_easyfood" referencedTableName="revision_entity" referencedColumnNames="id"
                                 constraintName="fk_user_system_audit_rev"/>
    </changeSet>

</databaseChangeLog>
