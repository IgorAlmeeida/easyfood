<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        logicalFilePath="db/changelog/0006-alter-address-number-to-varchar.xml"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="0006-alter-address-number-to-varchar" author="system">
        <comment>Altera o tipo da coluna number de INT para VARCHAR(50) nas tabelas easyfood.address e audit_easyfood.address_audit</comment>

        <modifyDataType tableName="address" schemaName="easyfood" columnName="number" newDataType="VARCHAR(50)"/>
        <modifyDataType tableName="address_audit" schemaName="audit_easyfood" columnName="number" newDataType="VARCHAR(50)"/>
    </changeSet>

</databaseChangeLog>
